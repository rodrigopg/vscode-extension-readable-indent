{
	"name": "indentacao-variaveis-advpl",
	"publisher": "rodrigopg",
	"displayName": "Indentação de variáveis para Advpl/TLPP",
	"description": "Indentação de variáveis criadas no padrão Advpl para uma visão mais legível.",
	"icon": "docs/favicon.png",
	"qna": "marketplace",
	"categories": [
		"Snippets",
		"Formatters"
	],
	"keywords": [
		"editor",
		"advpl",
		"tlpp",
		"indentacao",
		"indent",
		"totvs",
		"customize soluções"
	],
	"badges": [
		{
			"description": "Commitizen Friendly!",
			"href": "http://commitizen.github.io/cz-cli/",
			"url": "https://img.shields.io/badge/commitizen-friendly-brightgreen.svg"
		}
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/rodrigopg/vscode-extension-readable-indent.git"
	},
	"version": "2.2.0",
	"engines": {
		"vscode": "^1.32.0"
	},
	"main": "./out/extension.js",
	"activationEvents": [
		"onCommand:extension.readableIndent.indent",
		"onCommand:extension.readableIndent.indentAlpha",
		"onCommand:extension.readableIndent.reset"
	],
	"contributes": {
		"configuration": [
			{
				"properties": {
					"extension.readableIntent.minimumWhitespaceBeforePivot": {
						"default": 0,
						"title": "Quantidade de espaços utilizados na indentação do código",
						"type": "integer"
					}
				}
			}
		],
		"commands": [
			{
				"command": "extension.readableIndent.indent",
				"title": "Indentação de variáveis"
			},
			{
				"command": "extension.readableIndent.indentAlpha",
				"title": "Indentação de variáveis - Ordem Alfabética"
			},
			{
				"command": "extension.readableIndent.reset",
				"title": "Remove a indentação"
			}
		],
		"keybindings": [
			{
				"command": "extension.readableIndent.indent",
				"key": "ctrl+i ctrl+a",
				"mac": "cmd+i cmd+a",
				"when": "editorTextFocus && !editorReadonly"
			},
			{
				"command": "extension.readableIndent.indentAlpha",
				"key": "ctrl+i ctrl+shift+a",
				"mac": "cmd+i cmd+shift+a",
				"when": "editorTextFocus && !editorReadonly"
			},
			{
				"command": "extension.readableIndent.reset",
				"key": "ctrl+i ctrl+s",
				"mac": "cmd+i cmd+s",
				"when": "editorTextFocus && !editorReadonly"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "extension.readableIndent.indent",
					"group": "2_indentation@1",
					"when": "editorTextFocus && !editorReadonly"
				},
				{
					"command": "extension.readableIndent.indentAlpha",
					"group": "2_indentation@2",
					"when": "editorTextFocus && !editorReadonly"
				},
				{
					"command": "extension.readableIndent.reset",
					"group": "2_indentation@3",
					"when": "editorTextFocus && !editorReadonly"
				}
			]
		}
	},
	"scripts": {
		"compile": "tsc -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"package": "npm run compile && vsce package",
		"test": "npm run compile && node ./node_modules/vscode/bin/test",
		"vscode:prepublish": "npm run compile",
		"release": "standard-version",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.17.20",
		"cz-conventional-changelog": "^2.1.0",
		"standard-version": "^5.0.2",
		"tslint": "^5.20.1",
		"typescript": "^3.8.3",
		"vscode": "^1.1.36"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"standard-version": {
		"skip": {}
	}
}
